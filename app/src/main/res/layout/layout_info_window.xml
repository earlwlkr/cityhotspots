<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/font_normal"
        />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:textSize="@dimen/font_small"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/txt_cuisine_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nền ẩm thực: "
        android:textStyle="bold"
        android:textSize="@dimen/font_small"
        android:layout_below="@id/txt_address"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/txt_cuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:layout_alignBaseline="@id/txt_cuisine_label"
        android:layout_toEndOf="@id/txt_cuisine_label"
        android:layout_toRightOf="@id/txt_cuisine_label"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/txt_price_range_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khoảng giá: "
        android:textStyle="bold"
        android:textSize="@dimen/font_small"
        android:layout_below="@id/txt_cuisine_label"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/txt_price_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:layout_alignBaseline="@id/txt_price_range_label"
        android:layout_toEndOf="@id/txt_price_range_label"
        android:layout_toRightOf="@id/txt_price_range_label"
        android:textColor="@color/gray"
        />

</RelativeLayout>