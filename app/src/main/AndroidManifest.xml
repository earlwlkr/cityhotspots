<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.earlwlkr.cityhotspots" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/geo_api_key" />

        <activity
            android:name=".ui.DinerOptionsActivity"
            android:label="@string/title_activity_diner_options"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.DinersListActivity"
            android:label="@string/title_activity_diners_list"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.DinerOptionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.earlwlkr.cityhotspots.ui.DinerOptionsActivity" />
        </activity>
        <activity
            android:name=".ui.MapViewActivity"
            android:label="@string/title_activity_map_view"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.DinersListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.earlwlkr.cityhotspots.ui.DinersListActivity" />
        </activity>
        <activity
            android:name=".ui.CinemaOptionsActivity"
            android:label="@string/title_activity_cinema_options"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.earlwlkr.cityhotspots.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.CinemasListActivity"
            android:label="@string/title_activity_cinemas_list"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.CinemaOptionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.earlwlkr.cityhotspots.ui.CinemaOptionsActivity" />
        </activity>
    </application>

</manifest>
